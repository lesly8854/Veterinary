@page
@model Veterinary.Pages.MedicalRecords.MedicalRecordListModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Medical Records";
}

<div class="row mb-4">
    <div class="col-8 text-start">
        <h2>Medical Records 📋🩺</h2>
    </div>
    <div class="col-4 text-end">
        <a asp-page="/MedicalRecords/AddMedicalRecord" class="btn btn-success">
            + Add Medical Record
        </a>
    </div>
</div>

@if (Model.Records == null || !Model.Records.Any())
{
    <div class="alert alert-info">
        No medical records found right now.
    </div>
}
else
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Appointment ID</th>
                <th>Pet Name</th>
                <th>Date Recorded</th>
                <th>Diagnosis</th>
                <th>Treatment</th>
                <th>Prescription</th>
                <th>Vaccination</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rec in Model.Records)
            {
                <tr>
                    <td>@rec.AppointmentID</td>
                    <td>@rec.PetName</td>
                    <td>@rec.DateRecorded?.ToString("g")</td>
                    <td>@rec.Diagnosis</td>
                    <td>@rec.Treatment</td>
                    <td>@rec.Prescription</td>
                    <td>@rec.Vaccination</td>
                    <td>@rec.Notes</td>
                    <td>
                        <a asp-page="/MedicalRecords/EditMedicalRecord"
                           asp-route-id="@rec.RecordID"
                           class="btn btn-sm btn-primary">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}