@page "{id:int}"
@model Veterinary.Pages.Appointments.EditAppointmentModel

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="row text-center mb-3">
    <div class="col-12">
        <label class="form-label fs-1">Edit Appointment</label>
    </div>
</div>

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Appointment.AppointmentID" />

        <div class="row mb-3">
            <div class="col-3">
                <label class="form-label fw-bold">Pet Name:</label>
            </div>
            <div class="col-9">
                <span class="form-label">@Model.PetName</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-3">
                <label class="form-label fw-bold">Owner Username:</label>
            </div>
            <div class="col-9">
                <span class="form-label">@Model.OwnerUsername</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-3">
                <label asp-for="AppointmentDate" class="form-label fw-bold">Date:</label>
            </div>
            <div class="col-9">
                <input asp-for="AppointmentDate" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-3">
                <label asp-for="AppointmentTime" class="form-label fw-bold">Time:</label>
            </div>
            <div class="col-9">
                <input asp-for="AppointmentTime" class="form-control" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-3">
                <label asp-for="Appointment.Reason" class="form-label fw-bold">Reason:</label>
            </div>
            <div class="col-9">
                <textarea asp-for="Appointment.Reason" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Appointment.Reason" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-3">
                <label asp-for="Appointment.Status" class="form-label fw-bold">Status:</label>
            </div>
            <div class="col-9">
                <select asp-for="Appointment.Status" class="form-control">
                    <option value="Scheduled">Scheduled</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Appointment.Status" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <a asp-page="/Appointments/AppointmentList" class="btn btn-secondary w-100">Cancel</a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
