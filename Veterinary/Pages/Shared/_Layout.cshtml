<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veterinary</title>

    @* Bootstrap from CDN (same as last time) *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Veterinary.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/favicon.png" />
</head>
<body class="fade-in">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    Veterinary
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Appointments/AppointmentList">Appointments</a>
                            </li>

                            <!-- renamed from MenuItems to Pets -->
                            @if (User.IsInRole("Owner"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Pet/PetList">Pets</a>
                                </li>
                            }

                            <!-- Vet-only Medical Records section -->
                            @if (User.IsInRole("Vet"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/MedicalRecords/MedicalRecordList">
                                        Medical Records
                                    </a>
                                </li>
                            }

                            <!-- renamed from Ingredients to Records -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/ManageAccounts">Manage Accounts</a>
                                </li>
                            }

                            <!-- Profile stays but namespace updated -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Profile">Profile</a>
                            </li>

                            <!-- Sign Out renamed page model stays same path style -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Signout">Sign Out</a>
                            </li>

                            <!-- Leave these pages exactly as-is (not renamed): -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AboutUs">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        }
                        else
                        {
                            <!-- Register + Sign In page links updated to Veterinary namespace -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Signin">Sign In</a>
                            </li>
                        }

                        <!-- AboutUs + Privacy do NOT get renamed per your request -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @{
        var isHomePage = ViewContext.RouteData.Values["Page"]?.ToString()?.ToLower() == "/index";
    }

    @if (!isHomePage)
    {
        <div class="container bg-light p-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <main role="main">
            @RenderBody()
        </main>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

<footer class="border-top footer text-white">
    <div class="container">
        &copy; 2025 - Veterinary - <a asp-area="" asp-page="/Privacy" class="text-white">Privacy</a>
    </div>
</footer>
</html>
